@startuml

skinparam interface {
  backgroundColor RosyBrown
  borderColor orange
}

skinparam component {
  FontSize 13
  BackgroundColor<<Apache>> Red
  BorderColor<<Apache>> #FF6655
  FontName Courier
  BorderColor black
  BackgroundColor gold
  ArrowFontName Impact
  ArrowColor #FF6655
  ArrowFontColor #777777
}

() "Facturation" as FA
[Comptabilite] .> FA : use
[SystemeCommande]  -- FA
[SystemeCommande] ..> CreationCommande : use
CreationCommande ..> [Clients] : use
PreparationCommande .> [SystemeCommande] : use
LivraisonCommande ..> [LogisticCommande] :use
[LogisticCommande] -- PreparationCommande
[InventaireStock] .> PreparationCommande : use
@enduml